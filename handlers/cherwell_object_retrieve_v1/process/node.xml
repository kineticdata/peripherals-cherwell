<?xml version="1.0" encoding="UTF-8"?>
<taskDefinition id="cherwell_object_retrieve" name="Cherwell Object Retrieve" schema_version="1.0" version="1">
    <author>support@kineticdata.com</author>
    <description>
        Generically retrieves an object from Cherwell.
    </description>
    <helpurl></helpurl>
    <visible>true</visible>
    <deferrable>false</deferrable>
    <parameters>
      <parameter id="error_handling" label="Error Handling" required="true"
          tooltip="Determine what to return if an error is encountered." menu="Error Message,Raise Error">Error Message</parameter>
        <parameter id="object_name" label="Object Name" required="true"
          tooltip="Readable name of the object to retrieve (ie. Incident)."/>
        <parameter id="object_id" label="Object Id" required="true"
          tooltip="Id of the object to be retrieved."/>
    </parameters>
    <handler name="cherwell_object_retrieve" version="1">
        <infos>
            <info name="api_location">&lt;%= @info['api_location'] %&gt;</info>
            <info name="client_id">&lt;%= @info['client_id'] %&gt;</info>
            <info name="client_secret">&lt;%= @info['client_secret'] %&gt;</info>
            <info name="username">&lt;%= @info['username'] %&gt;</info>
            <info name="password">&lt;%= @info["password"] %&gt;</info>
            <info name="enable_debug_logging">&lt;%= @info['enable_debug_logging'] %&gt;</info>
        </infos>
        <parameters>
            <parameter name="error_handling">&lt;%= @parameters.has_key?("error_handling") ?
            @parameters["error_handling"] : "Raise Error" %&gt;</parameter>
            <parameter name="object_name">&lt;%= @parameters["object_name"] %&gt;</parameter>
            <parameter name="object_id">&lt;%= @parameters['object_id'] %&gt;</parameter>
        </parameters>
    </handler>
    <results format="xml">
        <result name="Handler Error Message"></result>
        <result name="Object JSON"></result>
    </results>
</taskDefinition>
